
@{
    Page.Title = "Lista de tarefas";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/Content/css/home.css")" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="@Url.Content("~/Content/js/home.js")" type="text/javascript"></script>
    <script type="text/javascript">
        carregaLista();
    </script>
}

    <div class="row">
        <i class="fa fa-plus-circle fa-4x btnAdd" data-toggle="modal" data-target="#createModal"></i>

        <ul class="list-group col-md-12" id="tasks">
            
        </ul>
    </div>

<div id="alertCss" class="alert alert-success alertCss d-none" role="alert">
    <span id="textAlertCss"></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="container">
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Editar tarefa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mr-4">
                    <form>
                        <div class="form-group text-left">
                            <label for="titulo" class="col-form-label">Título:</label>
                            <input type="text" class="form-control" id="titulo">
                        </div>
                        <div class="form-group text-left">
                            <label for="desc" class="col-form-label">Descrição:</label>
                            <textarea class="form-control" id="desc"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" id="editarTarefa">Editar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createModalLabel">Nova tarefa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mr-4">
                    <form>
                        <div class="form-group text-left">
                            <label for="createTitulo" class="col-form-label">Título:</label>
                            <input type="text" class="form-control" id="createTitulo">
                        </div>
                        <div class="form-group text-left">
                            <label for="createDesc" class="col-form-label">Descrição:</label>
                            <textarea class="form-control" id="createDesc"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" id="salvarTarefa">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>